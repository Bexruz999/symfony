{% extends 'base.html.twig' %}

{% block title "bir narsa" %}

{% block body %}
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Corporis debitis dolores enim eveniet expedita, fuga
        inventore ipsa mollitia, necessitatibus nostrum odio repudiandae sunt tempore voluptas?</p>

    <a class="btn btn-success" href="{{ path('recipe.create')}}">New Recipe</a>
    <table class="table">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>
                    <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.title }}</a>
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-primary btn-sm" href="{{ path('recipe.edit', {id: recipe.id}) }}">Edit</a>
                        <form action="{{  path('recipe.delete', { id: recipe.id }) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

{% endblock %}
