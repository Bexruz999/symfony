{% extends 'base.html.twig' %}

{% block title "bir narsa" %}

{% block body %}

    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Corporis debitis dolores enim eveniet expedita, fuga
        inventore ipsa mollitia, necessitatibus nostrum odio repudiandae sunt tempore voluptas?</p>

    <a class="btn btn-success" href="{{ path('admin.collection.create')}}">{{ 'New' | trans }}</a>

    <table class="table">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(collections, 'ID', 'c.id') }}</th>
            <th>{{ knp_pagination_sortable(collections, 'Name', 'c.name') }}</th>
            <th>Category</th>
            <th>Count</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for collection in collections %}
            <tr id="row_recipe_{{ collection.id }}">
                <td>
                    {{ collection.id }}
                </td>
                <td>
                    <a href="{{ path('admin.collection.show', {id: collection.id, slug: collection.slug}) }}">{{ collection.name }}</a>
                </td>
                <td>
                    <p>{{ collection.category.name | default('') }}</p>
                </td>
                <td>
                    <p>{{ items.0.count | default(0) }}</p>
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-primary btn-sm" href="{{ path('admin.collection.edit', {id: collection.id}) }}">Edit</a>
                        <form action="{{  path('admin.collection.delete', { id: collection.id }) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    {{ knp_pagination_render(collections) }}

    {#<div class="d-flex">
        {% if page > 1 %}
