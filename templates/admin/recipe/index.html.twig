{% extends 'admin/admin.html.twig' %}

{% block title "bir narsa" %}

{% block body %}

    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Corporis debitis dolores enim eveniet expedita, fuga
        inventore ipsa mollitia, necessitatibus nostrum odio repudiandae sunt tempore voluptas?</p>

    <a class="btn btn-success" href="{{ path('admin.recipe.create')}}">New Recipe</a>

    <table class="table">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(recipes, 'ID', 'r.id') }}</th>
            <th>{{ knp_pagination_sortable(recipes, 'Title', 'r.title') }}</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr id="row_recipe_{{ recipe.id }}">
                <td>
                    {{ recipe.id }}
                </td>
                <td>
                    <turbo-frame id="resipe_{{ recipe.id }}">
                        <a href="{{ path('admin.recipe.edit', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.title }}</a>
                    </turbo-frame>
                </td>
                <td>
                    <p>{{ recipe.category.name | default('') }}</p>
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-primary btn-sm" href="{{ path('admin.recipe.edit', {id: recipe.id}) }}">Edit</a>
                        <form action="{{  path('admin.recipe.delete', { id: recipe.id }) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    {{ knp_pagination_render(recipes) }}

    {#<div class="d-flex">
        {% if page > 1 %}
